<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.media.MediaView?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1"
            fx:id="root"
            fx:controller="top.tonydon.HelloController">
    <HBox>
        <AnchorPane prefWidth="980">
            <VBox spacing="10" alignment="CENTER">
                <AnchorPane>
                    <MediaView fx:id="mediaView" fitHeight="540" fitWidth="960"/>
                </AnchorPane>

                <ButtonBar buttonOrder="BUTTON_ORDER_WINDOWS">
                    <buttons>
                        <Button onAction="#selectVideo">选择视频</Button>
                        <Button>播放</Button>
                    </buttons>
                </ButtonBar>

                <ButtonBar buttonOrder="BUTTON_ORDER_WINDOWS" fx:id="togetherButtonBar" disable="true">
                    <buttons>
                        <Button>同时播放</Button>
                        <Button>一起暂停</Button>
                        <Button>从头开始</Button>
                    </buttons>
                </ButtonBar>
            </VBox>
        </AnchorPane>

        <AnchorPane prefWidth="200">
            <VBox spacing="10">
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Button>复制星星号</Button>
                    <Label fx:id="selfNumberLabel"/>
                </HBox>
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Button onAction="#bindButtonAction" fx:id="bindButton">绑定他/她</Button>
                    <Label fx:id="targetNumberLabel"/>
                </HBox>
            </VBox>
        </AnchorPane>
    </HBox>
</AnchorPane>

